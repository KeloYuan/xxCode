{
  "search_topics": [
    "HarmonyOS Next 新特性",
    "ArkTS 最佳实践",
    "鸿蒙组件开发",
    "HarmonyOS 性能优化",
    "鸿蒙动画技巧",
    "分布式能力开发",
    "鸿蒙应用架构",
    "ArkUI 高级用法",
    "鸿蒙网络编程",
    "鸿蒙数据持久化"
  ],
  "sources": {
    "official_docs": "https://developer.harmonyos.com",
    "gitee_org": "https://gitee.com/harmonyos_samples",
    "blogs": [
      "https://harmonyos.51cto.com",
      "https://blog.csdn.net/HarmonyOS",
      "https://ost.51cto.com",
      "https://www.cnblogs.com"
    ],
    "forums": [
      "https://developer.huawei.com/consumer/cn/forum/home"
    ]
  },
  "output_dir": "../harmonyos-knowledge",
  "schedule": {
    "enabled": false,
    "frequency": "daily",
    "time": "02:00"
  },
  "crawl_settings": {
    "user_agent": "Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36",
    "timeout": 30,
    "retry_times": 3,
    "delay_range": [1, 3],
    "max_pages": 10
  },
  "quality_settings": {
    "min_code_lines": 5,
    "min_content_length": 200,
    "quality_threshold": 0.7,
    "similarity_threshold": 0.8
  },
  "ai_settings": {
    "enabled": false,
    "provider": "openai",
    "model": "gpt-4",
    "max_tokens": 2000,
    "temperature": 0.3
  },
  "output_settings": {
    "max_documents_per_run": 5,
    "auto_update_index": true,
    "auto_git_commit": false,
    "generate_changelog": true
  },
  "filter_keywords": [
    "示例",
    "教程",
    "实战",
    "详解",
    "指南",
    "技巧",
    "最佳实践",
    "源码"
  ],
  "exclude_keywords": [
    "招聘",
    "广告",
    "下载",
    "安装包"
  ],
  "document_templates": {
    "component": "templates/component.md",
    "tutorial": "templates/tutorial.md",
    "best_practice": "templates/best_practice.md",
    "example": "templates/example.md"
  }
}

